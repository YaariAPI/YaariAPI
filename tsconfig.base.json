{
  "compilerOptions": {
    "composite": true,
    "declarationMap": true,
    "emitDeclarationOnly": false,
    "importHelpers": true,
    "isolatedModules": true,
    "lib": ["es2022"],
    "module": "nodenext",
    // "moduleResolution": "node",
    "noEmitOnError": true,
    "noFallthroughCasesInSwitch": true,

    "noImplicitOverride": false,
    "noImplicitReturns": false,
    "noUnusedLocals": false,
    "skipLibCheck": false,
    "strict": false,
    "target": "es2022",
    // "customConditions": ["development"]
  }
}
