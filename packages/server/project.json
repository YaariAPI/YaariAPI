{
  "name": "server",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "projectType": "application",
  "tags": ["scope:backend"],
  "targets": {
    "build": {
      "executor": "nx:run-commands",
      "cache": true,
      "options": {
        "cwd": "packages/twenty-server",
        "commands": ["rimraf dist", "nest build --path ./tsconfig.build.json"]
      },
      "dependsOn": ["^build"]
    },
    "build:packageJson": {
      "executor": "@nx/js:tsc",
      "options": {
        "main": "packages/server/dist/src/main.js",
        "tsConfig": "packages/server/tsconfig.json",
        "outputPath": "packages/server/dist",
        "updateBuildableProjectDepsInPackageJson": true
      }
    },
    "typeorm": {
      "executor": "nx:run-commands",
      "options": {
        "cwd": "packages/server",
        "command": "ts-node ../../node_modules/typeorm/cli.js"
      }
    },
    "ts-node": {
      "executor": "nx:run-commands",
      "dependsOn": ["build"],
      "options": {
        "cwd": "packages/server",
        "command": "ts-node"
      }
    },
    "ts-node-no-deps": {
      "executor": "nx:run-commands",
      "options": {
        "cwd": "packages/server",
        "command": "ts-node"
      }
    },
    "database:migrate": {
      "executor": "nx:run-commands",
      "dependsOn": ["build"],
      "options": {
        "cwd": "packages/server",
        "commands": [
          "nx typeorm -- migration:run -d src/database/typeorm/core/core.datasource"
        ]
      }
    },
    "database:migrate:revert": {
      "executor": "nx:run-commands",
      "dependsOn": ["build"],
      "options": {
        "cwd": "packages/server",
        "commands": [
          "nx typeorm -- migration:revert -d src/database/typeorm/core/core.datasource"
        ]
      }
    },
    "ts-node-no-deps-transpile-only": {
      "executor": "nx:run-commands",
      "options": {
        "cwd": "packages/server",
        "command": "ts-node --transpile-only"
      }
    },
    "database:reset": {
      "executor": "nx:run-commands",
      "dependsOn": ["build"],
      "configurations": {
        "no-seed": {
          "cwd": "packages/server",
          "commands": [
            "nx ts-node-no-deps-transpile-only -- ./scripts/truncate-db.ts",
            "nx ts-node-no-deps-transpile-only -- ./scripts/setup-db.ts",
            "nx database:migrate",
          ],
          "parallel": false
        },
        "seed": {
          "cwd": "packages/server",
          "commands": [
            "nx ts-node-no-deps-transpile-only -- ./scripts/truncate-db.ts",
            "nx ts-node-no-deps-transpile-only -- ./scripts/setup-db.ts",
            "nx database:migrate",
          ],
          "parallel": false
        }
      },
      "defaultConfiguration": "seed"
    },
    
  }
}
